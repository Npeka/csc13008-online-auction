model Bid {
  id        String  @id @default(cuid())
  amount    Float
  maxAmount Float?  // For auto-bidding: max amount user is willing to pay
  isValid   Boolean @default(true) // Can be invalidated by seller
  isAutoBid Boolean @default(false) // For future auto-bidding feature

  // Relations
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  bidderId  String
  bidder    User    @relation(fields: [bidderId], references: [id])

  // Timestamps
  createdAt DateTime @default(now())

  @@index([productId, isValid, amount])
  @@index([bidderId, isValid])
  @@index([productId, createdAt])
  @@map("bids")
}
