// Track sellers blocking specific bidders from their products
model BidderBlock {
  id String @id @default(cuid())

  // Relations
  sellerId  String
  seller    User    @relation("SellerBlocks", fields: [sellerId], references: [id])
  bidderId  String
  bidder    User    @relation("BidderBlocked", fields: [bidderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt DateTime @default(now())

  @@unique([sellerId, bidderId, productId])
  @@map("bidder_blocks")
}
